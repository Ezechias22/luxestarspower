{
    "name": "luxestarspower/marketplace",
    "description": "Marketplace de fichiers num√©riques premium",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "stripe/stripe-php": "^13.0",
        "aws/aws-sdk-php": "^3.0",
        "phpmailer/phpmailer": "^6.8",
        "firebase/php-jwt": "^6.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "ramsey/uuid": "^4.7",
        "intervention/image": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Controllers\\": "app/Controllers/",
            "App\\Models\\": "app/Models/",
            "App\\Services\\": "app/Services/",
            "App\\Repositories\\": "app/Repositories/",
            "App\\Validators\\": "app/Validators/",
            "App\\Middlewares\\": "app/Middlewares/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 app/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
